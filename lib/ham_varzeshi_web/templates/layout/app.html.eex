        <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>"/>

    <script defer type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  </head>

  <body class="bg-gray-300">

<div class="">
    <div class="flex items-center justify-between bg-gray-700 p-10">

      <div class="">
        <svg class="mr-2" width="54" height="54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
        <div class="font-semibold text-4xl text-green-300 inline "> HamVarzeshi </div>
      </div>

      <div>
        <%= if @conn.assigns[:user] do %>
          <div>
          <%= button("Sing out", to: Routes.auth_path(@conn, :signout),method: :get, class: "text-base bg-green-300 border-2 border-black rounded-lg text-black px-2")  %>
          </div>
          <div>
          reserved sessions
          </div>
        <% else %>
          <div>
           <%= button("Sing in with google", to: Routes.auth_path(@conn, :request , "google"),method: :get, class: "text-base bg-green-300 border-2 border-black rounded-lg text-black px-2")  %>
          </div>
        <% end %>
      </div>
    </div>

   <div class=" bg-green-300 w-full h-2"> </div>

   <main role="main" class="container">

      <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
      <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>

      <%= @inner_content %>
    </main>


